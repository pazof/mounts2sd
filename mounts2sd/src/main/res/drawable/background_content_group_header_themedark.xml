<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="1dp">

		<shape>
		    		    
		    <stroke
		        android:width="1dp"
		        android:color="@color/border_content_group_header_themedark" />
		    
		    <gradient
		        android:angle="270"
		        android:endColor="@color/background_content_group_header_stop_themedark"
		        android:startColor="@color/background_content_group_header_start_themedark" />

			<corners 
		      android:radius="10dp"
		      android:bottomLeftRadius="0.1dp"
		      android:bottomRightRadius="0.1dp" />
		
		    <padding 
		        android:left="1dp"
		        android:right="1dp"
		        android:top="1dp"
		        android:bottom="1dp"/> 
		
		</shape>
		
    </item>

</layer-list>