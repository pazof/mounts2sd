        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/background_content_item_divider_themedark" />
            
            <!-- This is needed for Android 2.3 and below -->
            <solid android:color="@android:color/transparent" />
				<padding android:left="10dp"
					android:right="10dp"
					android:top="10dp"
					android:bottom="10dp">
			</padding>
        </shape>
    </item>

</layer-list>